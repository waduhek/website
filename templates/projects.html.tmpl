<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="/static/css/style.css">
        <title>Ryan Noronha - Projects</title>
    </head>

    <body>
        <div class="container">
            {{template "header.html.tmpl"}}

            {{range .}}
                <div class="section">
                    <h2>{{.Name}}</h2>
                    {{if .PublicURL}}
                        <p>
                            <a href="{{.PublicURL}}">
                                <small>{{.PublicURL}}</small>
                            </a>
                        </p>
                    {{end}}
                    {{if .RepoURL}}
                        <p>
                            <a href="{{.RepoURL}}">
                                <small>{{.RepoURL}}</small>
                            </a>
                        </p>
                    {{end}}
                    <ul>
                        {{range .Description}}
                            <li>{{.}}</li>
                        {{end}}
                    </ul>
                </div>
            {{end}}

            {{template "footer.html.tmpl"}}
        </div>
    </body>
</html>
